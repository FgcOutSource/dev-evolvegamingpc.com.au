{%- if section.settings.background_type == 'boxed' -%}
  {%- assign is_boxed = true -%}
{%- else -%}
  {%- assign is_boxed = false -%}
{%- endif -%}

<style>
  #shopify-section-{{ section.id }} {
    {%- if section.settings.text_color == 'rgba(0,0,0,0)' -%}
      {%- assign heading_color = settings.heading_color -%}
      {%- assign text_color = settings.text_color -%}
    {%- else -%}
      {%- assign heading_color = section.settings.text_color -%}
      {%- assign text_color = section.settings.text_color -%}
    {%- endif -%}

    {%- if section.settings.button_background == 'rgba(0,0,0,0)' -%}
      {%- assign button_background = settings.primary_button_background -%}
    {%- else -%}
      {%- assign button_background = section.settings.button_background -%}
    {%- endif -%}

    {%- if section.settings.button_text_color == 'rgba(0,0,0,0)' -%}
      {%- assign button_text_color = settings.primary_button_text_color -%}
    {%- else -%}
      {%- assign button_text_color = section.settings.button_text_color -%}
    {%- endif -%}

    {%- if section.settings.section_background == 'rgba(0,0,0,0)' -%}
      {%- assign section_background = '#1f2937' -%}
    {%- else -%}
      {%- assign section_background = section.settings.section_background -%}
    {%- endif -%}

    --heading-color: {{ heading_color.red }}, {{ heading_color.green }}, {{ heading_color.blue }};
    --text-color: {{ text_color.red }}, {{ text_color.green }}, {{ text_color.blue }};
    --button-background: {{ button_background.red }}, {{ button_background.green }}, {{ button_background.blue }};
    --button-text-color: {{ button_text_color.red }}, {{ button_text_color.green }}, {{ button_text_color.blue }};
    --section-background: {{ section_background }};
    --section-padding: {{ section.settings.section_padding }}px;
    --logo-size: {{ section.settings.logo_size }}px;
  }

  #shopify-section-{{ section.id }} .pc-maintenance-header {
    background-color: var(--section-background);
    padding: var(--section-padding) 1.5rem;
    {% if section.settings.reveal_on_scroll %}opacity: 0; transform: translateY(20px); transition: all 0.6s ease;{% endif %}
  }

  {% if section.settings.reveal_on_scroll %}
    #shopify-section-{{ section.id }} .pc-maintenance-header.revealed {
      opacity: 1;
      transform: translateY(0);
    }
  {% endif %}

  #shopify-section-{{ section.id }} .header-container {
    max-width: {% if is_boxed %}1200px{% else %}100%{% endif %};
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
  }

  #shopify-section-{{ section.id }} .logo-content {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex: 1;
  }

  #shopify-section-{{ section.id }} .logo-circle {
    width: var(--logo-size);
    height: var(--logo-size);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }

  #shopify-section-{{ section.id }} .logo-circle:hover {
    transform: scale(1.05);
  }

  #shopify-section-{{ section.id }} .logo-icon {
    width: calc(var(--logo-size) * 0.5);
    height: calc(var(--logo-size) * 0.5);
    color: white;
  }

  /* Added styles for custom image in logo circle */
  #shopify-section-{{ section.id }} .logo-image {
    width: var(--logo-size);
    height: var(--logo-size);
    object-fit: cover;
    border-radius: 50%;
  }

  #shopify-section-{{ section.id }} .content-text h1 {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    color: rgb(var(--heading-color));
    margin: 0 0 0.25rem 0;
    line-height: 1.2;
  }

  #shopify-section-{{ section.id }} .content-text p {
    color: rgb(var(--text-color));
    font-size: {{ section.settings.text_size }}px;
    margin: 0;
    max-width: 28rem;
    line-height: 1.4;
  }

  #shopify-section-{{ section.id }} .book-button {
    background-color: rgb(var(--button-background));
    color: rgb(var(--button-text-color));
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-weight: 600;
    font-size: {{ section.settings.button_text_size }}px;
    border: none;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  #shopify-section-{{ section.id }} .book-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(var(--button-background), 0.3);
  }

  /* Responsive Design */
  @media (max-width: 1023px) and (min-width: 768px) {
    #shopify-section-{{ section.id }} .header-container {
      {% if section.settings.tablet_layout == 'stacked' %}
        flex-direction: column;
        gap: 1rem;
      {% endif %}
    }

    #shopify-section-{{ section.id }} .logo-content {
      {% if section.settings.tablet_layout == 'stacked' %}
        justify-content: center;
        gap: 1rem;
      {% endif %}
    }

    #shopify-section-{{ section.id }} .content-text {
      {% if section.settings.tablet_layout == 'stacked' %}
        text-align: center;
      {% endif %}
    }

    #shopify-section-{{ section.id }} .content-text h1 {
      font-size: calc({{ section.settings.heading_size }}px * 0.9);
    }
  }

  @media (max-width: 767px) {
    #shopify-section-{{ section.id }} .pc-maintenance-header {
      padding: calc(var(--section-padding) * 1.5) 1rem;
    }

    #shopify-section-{{ section.id }} .header-container {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    #shopify-section-{{ section.id }} .logo-content {
      {% if section.settings.mobile_layout == 'vertical' %}
        flex-direction: column;
        gap: 1rem;
      {% endif %}
    }

    #shopify-section-{{ section.id }} .logo-circle {
      {% if section.settings.mobile_layout == 'vertical' %}
        margin: 0 auto;
      {% endif %}
    }

    #shopify-section-{{ section.id }} .content-text h1 {
      font-size: calc({{ section.settings.heading_size }}px * 0.75);
      margin-bottom: 0.75rem;
    }

    #shopify-section-{{ section.id }} .content-text p {
      margin-bottom: 1.5rem;
      padding: 0 0.5rem;
      font-size: calc({{ section.settings.text_size }}px * 0.9);
    }

    #shopify-section-{{ section.id }} .book-button {
      {% if section.settings.mobile_button_full_width %}
        width: 100%;
        max-width: 20rem;
      {% endif %}
    }
  }
</style>

<section class="section {{ section.settings.custom_class }} section-{{ section.id }}">
  <div {% if is_boxed %}class="container"{% endif %}>
    <header class="pc-maintenance-header" {% if section.settings.reveal_on_scroll %}data-reveal-on-scroll{% endif %}>
      <div class="header-container">
        <div class="logo-content">
          <div class="logo-circle">
            {% if section.settings.image != blank %}
              {{ section.settings.image | image_url: width: 200 | image_tag: class: 'logo-image', alt: section.settings.heading }}
            {% elsif section.settings.custom_icon != blank %}
              {{ section.settings.custom_icon }}
            {% else %}
              <svg class="logo-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            {% endif %}
          </div>
          <div class="content-text">
            {% if section.settings.heading != blank %}
              <h1>{{ section.settings.heading }}</h1>
            {% endif %}
            {% if section.settings.description != blank %}
              <p>{{ section.settings.description }}</p>
            {% endif %}
          </div>
        </div>
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link | default: '#' }}" class="book-button">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </header>
  </div>
</section>

{% if section.settings.reveal_on_scroll %}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('revealed');
        }
      });
    }, { threshold: 0.1 });

    const element = document.querySelector('#shopify-section-{{ section.id }} [data-reveal-on-scroll]');
    if (element) observer.observe(element);
  });
</script>
{% endif %}

