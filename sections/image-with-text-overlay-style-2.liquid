{%- if section.settings.background_type == 'boxed' -%}
  {%- assign is_boxed = true -%}
{%- else -%}
  {%- assign is_boxed = false -%}
{%- endif -%}

<style>
  {%- assign text_position = section.settings.text_position | split: '_' | first -%}

  {%- case text_position -%}
  {%- when 'top' -%}
  {%- assign section_items_alignment = 'flex-start' -%}
{%- when 'middle' -%}
{%- assign section_items_alignment = 'center' -%}
{%- when 'bottom' -%}
{%- assign section_items_alignment = 'flex-end' -%}
{%- endcase -%}

#shopify-section-{{ section.id }} {
  {%- if section.settings.text_color == 'rgba(0,0,0,0)' -%}
    {%- assign heading_color = settings.heading_color -%}
    {%- assign text_color = settings.text_color -%}
  {%- else -%}
  {%- assign heading_color = section.settings.text_color -%}
  {%- assign text_color = section.settings.text_color -%}
{%- endif -%}

--heading-color: {{ heading_color.red }}, 
{{ heading_color.green }}, 
{{ heading_color.blue }};
--text-color: {{ text_color.red }}, 
{{ text_color.green }}, 
{{ text_color.blue }};

--section-items-alignment: {{ section_items_alignment }};
--section-overlay-color: {{ section.settings.overlay_color.red }}, 
{{ section.settings.overlay_color.green }}, 
{{ section.settings.overlay_color.blue }};
--section-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
}


/*
   =========================
   Button wrapper + button styles (uses the CSS vars above)
   =========================
*/
#shopify-section-{{ section.id }} .button-wrapper {
  display: flex;
  gap: 12px;
  align-items: center;
  justify-content: var(--section-items-alignment);
  flex-wrap: wrap;
  margin-top: 20px;
}

/* Primary button uses section-level colour vars (RGB stored as r,g,b) */
#shopify-section-{{ section.id }} .button.button--primary {
  border: none;
  padding: 0.7em 1.6em;
  border-radius: 40px;
  text-decoration: none;
  display: inline-block;
}

/* Secondary style fallback */
#shopify-section-{{ section.id }} .button.button--secondary {
  background: transparent;
  border: 1px solid rgba(var(--primary-button-background), 0.18);
  padding: 0.65em 1.4em;
  border-radius: 40px;
  text-decoration: none;
  display: inline-block;
}

/* Link style fallback â€“ try reuse existing theme link styles */
#shopify-section-{{ section.id }}a.multi-column__link.heading.heading--small.link {
  margin-right: 8px;
}

/* Responsive: mobile layout */
@media (max-width: 767px) {
  #shopify-section-{{ section.id }} .image-overlay__content {
    padding-left: 20px;
    padding-right: 20px;
  }

  #shopify-section-{{ section.id }}
  .button-wrapper {
    flex-direction: column;
    gap: 10px;
    justify-content: center;
    /* center on mobile */
    align-items: stretch;
  }

  #shopify-section-{{ section.id }}
  .button-wrapper .button {
    width: 100%;
    text-align: center;
  }
}
</style>

<section class="section {{ section.settings.custom_class }} {% unless is_boxed %}section--flush{% endunless %}">
  <div
    {% if is_boxed %}
    class="container"
    {% endif %}>
    {%- assign image = section.settings.image -%}
    {%- assign image_aspect_ratio = image.aspect_ratio | default: 2.63 -%}

    <image-with-text-overlay
      {% if section.settings.reveal_on_scroll %}
      reveal-on-scroll
      {% endif %}
      class="image-overlay image-overlay--{{ section.settings.section_height }}"
      {% if section.settings.section_height == 'auto' %}
      style="--image-aspect-ratio: {{ image_aspect_ratio }}"
      {% endif %}>
      <div
        class="image-overlay__image-wrapper"
        {% if section.settings.section_height == 'auto' %}
        style="padding-bottom: {{ 100.0 | divided_by: image_aspect_ratio }}%"
        {% endif %}>
        {%- if image != blank -%}
          {%- if section.settings.reveal_on_scroll -%}
            {{-
              image | image_url: width: image.width | image_tag: loading: 'lazy', widths: '600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000', reveal: true, class: 'image-overlay__image'
            -}}
          {%- else -%}
            {{-
              image | image_url: width: image.width | image_tag: loading: 'lazy', widths: '600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000', class: 'image-overlay__image'
            -}}
          {%- endif -%}
        {%- else -%}
          {%- capture image_classes -%}image-overlay__image image-overlay__image--placeholder image-overlay__image--{{ section.settings.section_height }}{%- endcapture -%}
          {%- if section.settings.reveal_on_scroll -%}
            {{- 'lifestyle-1' | placeholder_svg_tag: image_classes | replace: '<svg', '<svg reveal' -}}
          {%- else -%}
            {{- 'lifestyle-1' | placeholder_svg_tag: image_classes -}}
          {%- endif -%}
        {%- endif -%}
      </div>

      {%- capture section_content -%}
        {%- assign text_alignment = section.settings.text_position | split: '_' | last -%}

        <div class="image-overlay__content-wrapper">
          <div class="image-overlay__content content-box content-box--{{ section.settings.text_width }} content-box--text-{{ text_alignment }} content-box--{{ text_alignment }} text-container">
            {%- if section.settings.subheading != blank -%}
              <h2 class="heading heading--small">
                <split-lines {% if section.settings.reveal_on_scroll %}reveal{% endif %}>{{ section.settings.subheading | escape }}</split-lines>
              </h2>
            {%- endif -%}

            {%- if section.settings.title != blank -%}
              <h3 class="heading h2">
                <split-lines {% if section.settings.reveal_on_scroll %}reveal{% endif %}>{{ section.settings.title | escape }}</split-lines>
              </h3>
            {%- endif -%}

            {%- if section.settings.content != blank or section.settings.button_text != blank or section.blocks.size > 0 -%}
              <div class="image-overlay__text-container" {% if section.settings.reveal_on_scroll %}reveal{% endif %}>
                {%- if section.settings.content != blank-%}
                  {{- section.settings.content -}}
                {%- endif -%}

                {%- comment -%}
                  Legacy single button (kept for backward compatibility)
                {%- endcomment -%}

                {%- assign has_any_button = false -%}
                {%- if section.settings.button_text != blank -%}
                  {%- assign has_any_button = true -%}
                {%- endif -%}
                {%- if section.blocks.size > 0 -%}
                  {%- for b in section.blocks -%}
                    {%- if b.type == 'button' and b.settings.button_text != blank -%}
                      {%- assign has_any_button = true -%}
                    {%- endif -%}
                  {%- endfor -%}
                {%- endif -%}

                {%- if has_any_button -%}
                  <div class="button-wrapper">
                    {%- for block in section.blocks -%}
                      {%- if block.type == 'button' and block.settings.button_text != blank -%}

                        {%- assign bstyle = 'primary' -%}

                        {%- capture inline_style -%}
                          {%- if block.settings.button_text_color != blank -%}
                            color: {{ block.settings.button_text_color }};
                          {%- endif -%}

                          {%- if block.settings.button_no_bg -%}
                            background: transparent;
                          {%- elsif block.settings.button_bg_color != blank -%}
                            background-color: {{ block.settings.button_bg_color }};
                          {%- endif -%}
                        {%- endcapture -%}

                        {%- assign has_custom = false -%}
                        {%- if block.settings.button_text_color != blank or block.settings.button_bg_color != blank or block.settings.button_no_bg -%}
                          {%- assign has_custom = true -%}
                        {%- endif -%}

                        <a href="{{ block.settings.button_link }}" 
                          class="button{% unless has_custom %} button--{{ bstyle }}{% endunless %}"
                          style="{{ inline_style | strip }}">
                          {{ block.settings.button_text | escape }}
                        </a>

                      {%- endif -%}
                    {%- endfor -%}

                  </div>
                {%- endif -%}

              </div>
            {%- endif -%}
          </div>
        </div>
      {%- endcapture -%}
      <div
        {% if is_boxed %}
        style="width: 100%"
        {% else %}
        class="container"
        {% endif %}>
        {{- section_content -}}
      </div>
    </image-with-text-overlay>
  </div>
</section>

