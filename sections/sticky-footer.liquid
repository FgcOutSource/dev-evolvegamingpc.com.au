<div class="section section-{{ section.id }} prostickyfooter">
  <div class="wrap">
    <div class="columns">
      <div class="column column-left">
        <div class="left-content">
          {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'footer_items' -%}
              <div class="item testz">
                <div class="item-inner">
                  {%- assign image = block.settings.image -%}
                  {% if image %}
                  <div class="img-wrap">
                    <img src="" alt="">
                  </div>
                  {% endif %}
                  <div class="item-contents">
                    <div class="title">
                      <h6>{{ block.settings.title }} </h6>
                    </div>
                    <div class="desc">
                      {{ block.settings.short_description }}
                    </div>
                  </div>
                </div>
              </div>
          {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
      <div class="column column-right">
        <div class="right-price">
            {{ product.price | money }}
        </div>
        <div class="right-btn">
          <button class="sticky-btn" role="button">Add to Cart</button>
        </div>
        <div class="fgc-phone-number-footer">
          <button class=""><a href="tel:{{section.settings.store_phone}}">Need Help? Give us a Call</a></button>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
  "name": "Sticky Footer",
  "settings": [],
  "blocks": [
    {
      "name": "Footer Items",
      "type": "footer_items",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "short_description",
          "label": "Short Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sticky Footer"
    }
  ]
}  
{% endschema %}

